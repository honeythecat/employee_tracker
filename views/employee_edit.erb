<h1>Update <%= @employee.first_and_last_name() %> </h1>

<form action="/employees/<%= @employee.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="first_and_last_name">Rename your employee:</label>
  <input id="first_and_last_name" name="first_and_last_name" type="text">

  <button type="submit">Update</button>
</form>
